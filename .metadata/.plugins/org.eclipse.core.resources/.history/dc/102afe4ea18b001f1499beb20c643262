package com.services.ConfigService.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.services.ConfigService.entities.ConfigProperty;
import com.services.ConfigService.repositories.ConfigRepository;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

@Service
public class ConfigService implements IConfigService {

    @Autowired
    private ConfigRepository configRepository;

    public Map<String, String> getAllProperties() {
        List<ConfigProperty> properties = configRepository.findAll();
        Map<String, String> configMap = new HashMap<>();
        for (ConfigProperty property : properties) {
            configMap.put(property.getKey(), property.getValue());
        }
        return configMap;
    }

    public String getProperty(String key) {
        ConfigProperty property = configRepository.findByKey(key);
        return property != null ? property.getValue() : null;
    }
    
}