  port: 8083

spring:
  application:
    name: CONFIG-SERVICE
  cloud:
    config:
      server:
        composite:
          - type: jdbc
            order: 0
            uri: jdbc:mysql://localhost:3306/db
            username: root
            password: root
            sql: SELECT `value` FROM `config_properties` WHERE `key` = ? AND `profile` = ? AND `label` = ?
          - type: git
            uri: null  # This ensures Git is not used
      bootstrap: true  # Enable bootstrap mode for composite config
  datasource:
    url: jdbc:mysql://localhost:3306/db
    username: root
    password: root
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true