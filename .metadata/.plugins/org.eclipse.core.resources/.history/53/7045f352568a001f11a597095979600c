server:
  port: 9090

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: auth-service
          uri: lb://user-service
          predicates:
            - Path=/api/auth/**
        - id: blog-service
          uri: lb://blog-service
          predicates:
            - Path=/api/blogs/**

cloud:
  discovery:
      client:
        service-url:
          defaultZone: http://localhost:8761/eureka/